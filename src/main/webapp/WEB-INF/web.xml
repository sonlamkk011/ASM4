<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>com.example.asm4.controller.CreateAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListAccount</servlet-name>
        <servlet-class>com.example.asm4.controller.ListAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListAccount</servlet-name>
        <url-pattern>/list-account</url-pattern>
    </servlet-mapping><servlet>
    <servlet-name>UpdateAccount</servlet-name>
    <servlet-class>com.example.asm4.controller.UpdateAccount</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>UpdateAccount</servlet-name>
        <url-pattern>/update-account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>com.example.asm4.controller.DeleteAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/delete-account</url-pattern>
    </servlet-mapping>
</web-app>
